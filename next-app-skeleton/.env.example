# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Bilsem Quiz Next

# Auth
AUTH_SECRET=replace-me

# Local DB (docker compose)
DATABASE_URL=postgres://postgres:postgres@localhost:5433/bilsem_quiz

# Optional per-field PG configs
PGHOST=localhost
PGPORT=5433
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=bilsem_quiz

# DB pool/retry/telemetry
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=5000
DB_APPLICATION_NAME=bilsem-quiz-next-skeleton
DB_RETRY_ATTEMPTS=3
DB_RETRY_BASE_DELAY_MS=120
DB_RETRY_MAX_DELAY_MS=2000
DB_TELEMETRY=1
DB_LOG_ALL_QUERIES=0
DB_SLOW_QUERY_MS=300

# Dump path override (optional)
DB_DUMP_PATH=../backup/full_dump.sql

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
