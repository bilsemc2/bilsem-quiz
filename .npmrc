public-hoist-pattern=*
shamefully-hoist=true
enable-pre-post-scripts=true
unsafe-perm=true
ignore-scripts=false

# Belirli paketler için build scriptlerini onayla
enable-pre-post-scripts=true
publish-branch=main
npm-offline-mode=false
node-linker=hoisted
strict-peer-dependencies=false
auto-install-peers=true

# Özel paket yapılandırmaları
prefer-frozen-lockfile=false

# Onaylanmış build scriptleri
pnpm.allow-scripts.core-js=true
pnpm.allow-scripts.esbuild=true
pnpm.allow-scripts.protobufjs=true
pnpm.allow-scripts.puppeteer=true
pnpm.allow-scripts.sharp=true
